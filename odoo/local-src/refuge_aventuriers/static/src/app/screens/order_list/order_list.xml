<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
  <t t-name="refuge_aventuriers.OrderListScreen" owl="1">
    <div class="order-list-screen">
      <t t-if="state.currentScreen === 'list'">
        <h2>Commandes en cours</h2>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Nom</th>
              <th>Prix</th>
              <th>Statut</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <t t-if="state.orders.length">
              <t t-foreach="state.orders" t-as="order" t-key="order.id">
                <tr>
                  <td><t t-esc="order.name"/></td>
                  <td><t t-esc="order.amount_total"/> €</td>
                  <td><t t-esc="order.state"/></td>
                  <td>
                    <button class="btn btn-primary"
                            t-on-click="() => showOrderDetails(order.id)">
                      Voir détails
                    </button>
                  </td>
                </tr>
              </t>
            </t>
            <t t-if="!state.orders.length">
              <tr><td colspan="4">Aucune commande trouvée.</td></tr>
            </t>
          </tbody>
        </table>
      </t>

      <t t-if="state.currentScreen === 'details'">
        <div class="order-detail-screen">
          <h2>Détails de la commande <t t-esc="state.selectedOrder.order_name"/></h2>
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Produit</th>
                <th>Quantité</th>
                <th>Prix unitaire</th>
                <th>Sous-total</th>
              </tr>
            </thead>
            <tbody>
              <t t-foreach="state.selectedOrder.lines" t-as="line" t-key="line.product_name">
                <tr>
                  <td><t t-esc="line.product_name"/></td>
                  <td><t t-esc="line.qty"/></td>
                  <td><t t-esc="line.price_unit"/> €</td>
                  <td><t t-esc="line.price_subtotal"/> €</td>
                </tr>
              </t>
            </tbody>
          </table>
          <button class="btn btn-secondary mt-3" t-on-click="goBack">
            Retour
          </button>
        </div>
      </t>
    </div>
  </t>
</templates>
