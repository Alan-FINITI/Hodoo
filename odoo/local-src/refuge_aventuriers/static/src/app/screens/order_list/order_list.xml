<templates id="template" xml:space="preserve">
     <t t-name="refuge_aventuriers.OrderListScreen" owl="1">
        <div class="order-list-screen">
            <h2>Commandes en cours</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Table</th>
                        <th>Prix</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="props.orders" t-as="order" t-key="order.id">
                        <tr>
                            <td><t t-esc="order.table_number"/></td>
                            <td><t t-esc="order.amount_total"/> €</td>
                            <td><t t-esc="order.state"/></td>
                            <td>
                                <button class="btn btn-primary" t-on-click="() => props.showOrderDetails(order.id)">
                                    Voir détails
                                </button>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </div>
    </t>
