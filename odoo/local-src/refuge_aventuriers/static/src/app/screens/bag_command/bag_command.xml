<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="refuge_aventuriers.BagCommandScreen">
        <t t-if="state.order">
            <div class="bag-command-container">
                <table class="command-table">
                    <thead>
                        <tr>
                            <th class="table-header">Nom du produit</th>
                            <th class="table-header">Quantité</th>
                            <th class="table-header">Prix</th>
                        </tr>
                    </thead>
                    <tbody>
                        <td t-esc="state.order.table_number" t-att-value="state.order.table_number"></td>
                        <t t-foreach="state.order.orderlines" t-as="order_line" t-key="order_line.id">
                            <tr class="table-row">
                                <td class="table-data" t-esc="order_line.product.display_name"></td>
                                <td class="table-data">
                                    <input type="number"
                                           min="0"
                                           t-att-value="order_line.quantity"
                                           t-on-change="(ev) => on_change_quantity(order_line.product.id[0], $event.target.value)" />
                                </td>
                                <td class="table-data" t-esc="order_line.price_display"></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                <div class="order-summary">
                    <t t-if="order">
                    <input type="number"
                        t-att-min="1"
                        t-att-max="15"
                        t-att-value="order.table_number"
                        t-on-change="(ev) => on_change_table_number(ev.target.value)"
                        class="product-quantity-input" />
                    </t>
                    <p><strong>Total :</strong> <t t-esc="total" /> €</p>
                </div>
                <div class="order-button-container">
                    <button type="button" t-on-click="on_order_button_click">Commander</button>
                </div>
            </div>
        </t>
        <t t-else="">
            <p>Chargement de la commande en cours...</p>
        </t>
    </t>
</templates>