<odoo>
    <record id="view_refuge_order_form" model="ir.ui.view">
        <field name="name">refuge.order.form</field>
        <field name="model">order.order</field>
        <field name="arch" type="xml">
            <form string="Order">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="table_number"/>
                        <field name="client_id"/>
                        <field name="product_ids"/>
                        <field name="amount_total"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="order_order_action" model="ir.actions.act_window">
        <field name="name">Orders</field>
        <field name="res_model">order.order</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
